<%- include('../partials/navbar', { admin: admin }) %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contact Us | ScaleUp Marketing</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    :root{
      --dark:#0b0f19;
      --primary:#2563eb;
      --gray:#6b7280;
    }

    body{
      font-family:'Segoe UI',sans-serif;
    }

    .navbar{
      background:var(--dark);
      padding:15px 0;
    }
    .navbar-brand,.nav-link{
      color:#fff !important;
    }
    .fancy-logo {
  font-weight: 900;
  font-size: 1.5rem;
  background: linear-gradient(90deg, #7c3aed, #22d3ee, #facc15);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1px;
  text-transform: uppercase;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.4);
  transition: all 0.3s ease;
}

.fancy-logo:hover {
  transform: scale(1.1) rotate(-2deg);
  text-shadow: 2px 2px 5px rgba(0,0,0,0.6);
}

    .page-header{
      background:linear-gradient(rgba(0,0,0,.6),rgba(0,0,0,.6)),
      url('https://images.unsplash.com/photo-1525182008055-f88b95ff7980');
      background-size:cover;
      background-position:center;
      padding:120px 0;
      color:#fff;
      text-align:center;
    }

    section{
      padding:80px 0;
    }

    .contact-box{
      background:#fff;
      border-radius:15px;
      padding:40px;
      box-shadow:0 10px 30px rgba(0,0,0,.08);
    }

    .info-card{
      background:#f8fafc;
      padding:25px;
      border-radius:12px;
      margin-bottom:20px;
    }

    footer{
      background:var(--dark);
      color:#cbd5f5;
      padding:40px 0;
      text-align:center;
    }
  </style>
</head>
<body>

<!-- Navbar -->


<div class="page-header">
  <h1 class="fw-bold">Contact Us</h1>
  <p class="mt-3">Let’s talk about growing your business</p>
</div>
<section>
  <div class="container">
    <div class="row g-4 align-items-center">

      <!-- Contact Info -->
      <div class="col-md-5">
        <div class="info-card">
          <h5>
            <a href="tel:+918080864942" class="text-decoration-none">
              <i class="fas fa-phone text-primary me-2"></i>
            </a>
            Phone
          </h5>
          <p class="text-muted mb-0">+91 8080864942</p>
        </div>

        <div class="info-card">
          <h5>
            <a href="mailto:contact@scaleupmarketing.com" class="text-decoration-none">
              <i class="fas fa-envelope text-primary me-2"></i>
            </a>
            Email
          </h5>
          <p class="text-muted mb-0">contact@scaleupmarketing.com</p>
        </div>
        <div class="info-card">
          <h5>
            <a 
              href="https://www.google.com/maps?q=Pune,Maharashtra,India"
              target="_blank"
              class="text-decoration-none">
              <i class="fas fa-location-dot text-primary me-2"></i>
            </a>
            Location
          </h5>
          <p class="text-muted mb-0">Pune, Maharashtra, India</p>
        </div>
        <a href="https://wa.me/919876543210" target="_blank"
           class="btn btn-success btn-lg w-100 mt-3">
          <i class="fab fa-whatsapp me-2"></i> Chat on WhatsApp
        </a>
      </div>
      <div class="col-md-7">
        <div class="contact-box">
          <h3 class="fw-bold mb-4">Send Us a Message</h3>
          <form method="POST" action="/contact">
            <input name="name" class="form-control mb-3" placeholder="Your Name" required>
            <input name="email" type="email" class="form-control mb-3" placeholder="Email" required>
            <input name="phone" class="form-control mb-3" placeholder="Phone">
            <textarea name="message" class="form-control mb-3" rows="4"></textarea>
            <button class="btn btn-primary w-100">Send Message</button>
          </form>
        </div>
      </div>

    </div>
  </div>
</section>

<footer>
  <p>© 2026 ScaleUp Marketing. All Rights Reserved.</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
