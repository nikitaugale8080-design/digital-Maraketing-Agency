.hero-content-wrapper {
  position: relative;
  z-index: 2;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
  max-width: 700px;
  margin: 0 auto;
  animation: fadeInUp 1s ease forwards;
}

.hero-title {
  font-size: 3rem;
