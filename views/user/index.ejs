    .hero {
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.hero-slide {
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  animation: slideShow 15s infinite;
  transition: transform 1.5s ease, opacity 1.5s ease;
}


.hero::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom right, rgba(0,0,0,0.4), rgba(0,0,0,0.2));
  z-index:1;
}


