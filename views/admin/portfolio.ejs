<%- include('../partials/navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Our Work | Nexora Digital</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container py-5">
  <h2 class="fw-bold text-center mb-5">Our Work</h2>

  <div class="row g-4">
    <% if(projects.length === 0){ %>
      <p class="text-center text-muted">No projects available</p>
    <% } %>

    <% projects.forEach(p => { %>
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          
          <% if(p.image){ %>
            <img src="<%= p.image %>" class="card-img-top" alt="<%= p.title %>">
          <% } %>

          <div class="card-body">
            <span class="badge bg-primary mb-2"><%= p.category %></span>
            <h5 class="card-title"><%= p.title %></h5>
            <p class="card-text text-muted"><%= p.description %></p>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>

<footer class="text-center py-4 bg-dark text-light mt-5">
  Â© 2026 Nexora Digital Marketing Agency
</footer>

</body>
</html>
